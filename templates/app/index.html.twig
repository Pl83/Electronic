{% extends 'base.html.twig' %}



{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .pp{
        width: 100px;
        height: 100px;
    }
    ul{
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        gap: 20px;
    }
    .bap {
        width: 200px;
        height: 200px;
        margin: 10px;
        border: 1px solid #ccc;
    }

</style>



    <div class="example-wrapper">

        <ul>
            {% for category in categorys %}
                <div class="bap">
                    <li><a href="{{ path('app_categorys', {'id': category.id}) }}">{{ category.name }}</a></li>
                    <img class="pp" src="{{ app.request.basepath }}/uploads/categorys/{{ category.pictureUrl }}" alt="{{ category.name }}" />
                </div>
            {% endfor %}
        </ul>
        <a href="{{ path('app_logout') }}">LogOut</a>
</div>
{% endblock %}
