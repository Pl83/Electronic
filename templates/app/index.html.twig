{% extends 'base.html.twig' %}



{% block title %}Hello AppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .introduc{
        padding-top: 120px;
        font-size: larger;
    }
    .introduc h1{
        font-size: 3.5em;
    }
</style>
    <div class="introduc">
        <h1>Welcome on ELECTRO !!!</h1>
        <p>Here we sell pc components, please enjoye your trip on our web site.</p>
    </div>
    <div class="example-wrapper">
        <ul>
            {% for category in categorys %}
                <a href="{{ path('app_categorys', {'id': category.id}) }}">
                <div class="card">
                    <li>{{ category.name }}</li>
                    <br>
                    <img class="pp" src="{{ app.request.basepath }}/uploads/categorys/{{ category.pictureUrl }}" alt="{{ category.name }}" />
                </div>
                </a>
            {% endfor %}
        </ul>

</div>



{% endblock %}
