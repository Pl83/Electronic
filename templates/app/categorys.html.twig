{% extends 'base.html.twig' %}



{% block title %}Hello AppController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .here{
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .main{
            width: 170px;
            height: auto;
            border: 1px solid black;
            padding: 10px;
            position: relative;
        }
        .pp{
            width: 50px;
            height: 50px;

        }
    </style>


    <form action="{{ path('app_categorys', { 'id': categorys.id }) }}" method="get">
        <label for="sort">Sort by price:</label>
        <select name="sort" id="sort">
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
        </select>
        <button type="submit">Sort</button>
    </form>

    <div>
        <h2>{{ categorys.name }}</h2>
        <p>Sort by price: {{ sort|capitalize }}</p>
        <ul class="here">
            {% for product in products %}
                <div class="main">
                    <img class="pp" src="{{ app.request.basepath }}/uploads/products/{{ product.pictureUrl }}" alt="{{ product.name }}" />
                    <a href="{{ path('app_products', {'id': product.id}) }}">
                            {{ product.name }} - {{ product.price }} $
                    </a>
                </div>
                <br>

            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('app_app') }}">Back to All categorys</a>


{% endblock %}
