{% extends 'base.html.twig' %}



{% block title %}Hello AppController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>


    <form action="{{ path('app_categorys', { 'id': categorys.id }) }}" method="get">
        <label for="sort">Sort by price:</label>
        <select name="sort" id="sort">
            <option value="asc">Ascending</option>
            <option value="desc">Descending</option>
        </select>
        <button type="submit">Sort</button>
    </form>

    <div>
        <h2>{{ categorys.name }}</h2>
        <p>Sort by price: {{ sort|capitalize }}</p>
        <ul>
            {% for product in products %}
                <li>
                    <img src="{{ product.pictureUrl }}" alt="{{ product.name }}" width="100">
                    {{ product.name }} - {{ product.price }} $
                </li>


            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('app_app') }}">Back to All categorys</a>


{% endblock %}
